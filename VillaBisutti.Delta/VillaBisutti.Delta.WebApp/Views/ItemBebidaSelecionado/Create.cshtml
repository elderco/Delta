@model VillaBisutti.Delta.Core.Model.ItemBebidaSelecionado
@{
	Layout = null;
}
	<script language="javascript" type="text/javascript">
		$(document).ready(function () {
			$("#TipoItemBebidaId").change(function () {
				if (!$(this).val())
					$("#ItensBebidaContainer").html("");
				else
					LoadPage("@(Url.Action("ListarPorTipo", "ItemBebida"))/?tipoId=" + $(this).val(), "ItensBebidaContainer");
			})
		});
	</script>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.BebidaId, new { @value = ViewBag.Id })

		<div class="form-group">
			@Html.LabelFor(model => model.ItemBebida.TipoItemBebida, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TipoItemBebidaId", (IEnumerable<SelectListItem>)ViewBag.TipoItemBebidaId, "Selecione", new { @class = "form-control" })
			</div>
		</div>
        <div class="form-group">
            @Html.LabelFor(model => model.ItemBebida, new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="ItensBebidaContainer">
            </div>
        </div>
		<div class="form-group">
			@Html.LabelFor(model => model.ContratoAditivoId, "ContratoAditivoId", new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("ContratoAditivoId", String.Empty)
				@Html.ValidationMessageFor(model => model.ContratoAditivoId)
			</div>
		</div>
        <div class="form-group">
            @Html.LabelFor(model => model.ContratacaoBisutti, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContratacaoBisutti)
                @Html.ValidationMessageFor(model => model.ContratacaoBisutti)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FornecimentoBisutti, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FornecimentoBisutti)
                @Html.ValidationMessageFor(model => model.FornecimentoBisutti)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade)
                @Html.ValidationMessageFor(model => model.Quantidade)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
				<button type="submit" class="btn btn-default"><span class="menu-icon fa fa-plus"></span> Adicionar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
