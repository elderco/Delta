@model VillaBisutti.Delta.Core.Model.ItemBebidaSelecionado
@{
	Layout = null;
}
	<script language="javascript" type="text/javascript">
		$(document).ready(function () {
			$("#TipoItemBebidaId").change(function () {
				if (!$(this).val())
					$("#ItensBebidaContainer").html("");
				else
					LoadPage("@(Url.Action("ListarPorTipo", "ItemBebida"))/?tipoId=" + $(this).val(), "ItensBebidaContainer");
			})
		});
	</script>
@using (Html.BeginForm("CreateItemBebidaSelecionado", "ItemBebidaSelecionado")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-inline">
        @Html.ValidationSummary(true)
		<input type="hidden" name="EventoId" id="EventoId" value="@(ViewBag.Id)" />

		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.ItemBebida.TipoItemBebida, new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.DropDownList("TipoItemBebidaId", (IEnumerable<SelectListItem>)ViewBag.TipoItemBebidaId, "Selecione", new { @class = "form-control" })
			</div>
		</div>
		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.ItemBebida, new { @class = "control-label col-md-12" })
			<div class="col-md-12" id="ItensBebidaContainer">
				<select></select>
			</div>
		</div>
		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.ContratoAditivoId, "ContratoAditivoId", new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.DropDownList("ContratoAditivoId", String.Empty)
				@Html.ValidationMessageFor(model => model.ContratoAditivoId)
			</div>
		</div>
		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.ContratacaoBisutti, new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.EditorFor(model => model.ContratacaoBisutti)
				@Html.ValidationMessageFor(model => model.ContratacaoBisutti)
			</div>
		</div>
		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.FornecimentoBisutti, new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.EditorFor(model => model.FornecimentoBisutti)
				@Html.ValidationMessageFor(model => model.FornecimentoBisutti)
			</div>
		</div>
		<div class="input-group col-md-1">
			@Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.EditorFor(model => model.Quantidade)
				@Html.ValidationMessageFor(model => model.Quantidade)
			</div>
		</div>
		<div class="input-group col-md-4">
			@Html.LabelFor(model => model.Observacoes, new { @class = "control-label col-md-12" })
			<div class="col-md-12">
				@Html.EditorFor(model => model.Observacoes)
				@Html.ValidationMessageFor(model => model.Observacoes)
			</div>
		</div>

		<div class="input-group col-md-1">
			<button type="submit" class="btn btn-default"><span class="menu-icon fa fa-plus"></span> Adicionar</button>
		</div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
