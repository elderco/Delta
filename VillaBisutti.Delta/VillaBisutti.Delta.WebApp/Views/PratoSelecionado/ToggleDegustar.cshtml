@model VillaBisutti.Delta.Core.Model.PratoSelecionado
@{
	Layout = null;
}
<script language="javascript" type="text/javascript">
	$(document).ready(function () {
		AddStack("Pratos do evento", "Prato @(Model.Prato.Nome) @(Model.Degustar ? "" : "não ")será degustado!");
		$("#Degustar_@(Model.Id)").removeClass("btn-success").removeClass("btn-danger").addClass("@(Model.Degustar ? "btn-success" : "btn-danger")");
		$("#Degustar_@(Model.Id)").attr("data-original-title", "Clique para @(Model.Degustar ? "remover da" : "incluir na") degustação");
		$("#Degustar_@(Model.Id)").html("@(Html.Raw(Model.Degustar ? "<i class=\\\"fa fa-check\\\"></i> Item será degustado" : "Degustar item"))");
	});
</script>
@Html.Partial("../PratoSelecionado/_HandleInput", Model)
