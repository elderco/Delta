@model VillaBisutti.Delta.Core.Model.PratoSelecionado
@{
	Layout = null;
}
<script language="javascript" type="text/javascript">
	$(document).ready(function () {
		AddStack("Pratos do evento", "Prato @(Model.Prato.Nome) definido para @(Model.Degustar ? "" : "não ")degustar.");
		$("#Degustar_@(Model.Id)").removeClass("btn-success").removeClass("btn-danger").addClass("@(Model.Degustar ? "btn-success" : "btn-danger")");
		$("#Degustar_@(Model.Id)").attr("data-original-title", "Clique para @(Model.Degustar ? "remover da" : "incluir na") degustação");
	});
</script>
