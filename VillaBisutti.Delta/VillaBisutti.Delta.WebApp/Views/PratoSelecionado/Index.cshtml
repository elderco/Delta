@model IEnumerable<VillaBisutti.Delta.Core.Model.PratoSelecionado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ConfiguracoesLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Evento.ContatoAssessoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prato.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Escolhido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degustar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacoes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Evento.ContatoAssessoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prato.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Escolhido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Degustar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacoes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
