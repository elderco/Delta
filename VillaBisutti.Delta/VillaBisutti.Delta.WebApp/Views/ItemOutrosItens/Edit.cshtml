@model VillaBisutti.Delta.Core.Model.ItemOutrosItens

@{
	Layout = null;
    ViewBag.Title = "Edit";
}
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
   
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade)
                @Html.ValidationMessageFor(model => model.Quantidade)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoItemOutrosItens, "TipoItemOutrosItens", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
				@Html.DropDownList("TipoItemOutrosItensId", (IEnumerable<SelectListItem>)ViewBag.TipoItemOutrosItens, String.Empty)
                @Html.ValidationMessageFor(model => model.TipoItemOutrosItens)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
