<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>&Delta; - Villa Bisutti</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/own")
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
	@RenderSection("scripts", required: false)


</head>
<body class="no-skin">
	<div id="navbar" class="navbar navbar-default navbar-collapse navbar-fixed-top">
		<script type="text/javascript">
			try { ace.settings.check('navbar', 'fixed') } catch (e) { }
		</script>

		<div class="navbar-container" id="navbar-container">
			<button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
				<span class="sr-only">Toggle sidebar</span>

				<span class="icon-bar"></span>

				<span class="icon-bar"></span>

				<span class="icon-bar"></span>
			</button>
			<div class="navbar-header pull-left">
				<a href="#" class="navbar-brand">
					<small>
						<img src="~/Content/Images/Delta.png" style="vertical-align: middle;" /> DELTA - Villa Bisutti
					</small>
				</a>
				<button class="pull-right navbar-toggle navbar-toggle-img collapsed" type="button" data-toggle="collapse" data-target=".navbar-buttons">
					<span class="sr-only">Toggle user menu</span>
					<b>RV</b>
				</button>
			</div>

			<div class="navbar-buttons navbar-header pull-right" role="navigation">
				<ul class="nav ace-nav">
					<li class="transparent">
						<a href="#"><i class="menu-icon fa fa-cog"></i></a>
					</li>
					<li class="transparent">
						<a data-toggle="dropdown" href="#" class="dropdown-toggle">
							<i class="menu-icon fa fa-calendar"></i>
							<b class="arrow fa fa-angle-down"></b>
						</a>
						<ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
							<li>
								<a href="@Url.Action("Create", "Evento")">
									<i class="ace-icon fa fa-plus"></i>
									Adicionar Evento
								</a>
								<b class="arrow"></b>
							</li>
							<li class="divider"></li>
							<li>
								<a href="#">
									<i class="menu-icon fa fa-caret-right"></i>
									Casa do Ator
								</a>
								<b class="arrow"></b>
							</li>
							<li>
								<a href="#">
									<i class="menu-icon fa fa-caret-right"></i>
									Quatá
								</a>
								<b class="arrow"></b>
							</li>
							<li>
								<a href="#">
									<i class="menu-icon fa fa-caret-right"></i>
									Tenerife
								</a>
								<b class="arrow"></b>
							</li>
							<li>
								<a href="#">
									<i class="menu-icon fa fa-caret-right"></i>
									Berrini
								</a>
								<b class="arrow"></b>
							</li>
							<li>
								<a href="#">
									<i class="menu-icon fa fa-caret-right"></i>
									Gomes de Carvalho
								</a>
								<b class="arrow"></b>
							</li>
						</ul>
					</li>
					<li class="transparent">
						<a href="#"><i class="menu-icon fa fa-dashboard"></i></a>
					</li>
					<li class="light-blue">
						<a data-toggle="dropdown" href="#" class="dropdown-toggle">

							<span class="user-info">
								<small>Olá,</small>
								Rafael Ravena
							</span>

							<i class="ace-icon fa fa-caret-down"></i>
						</a>

						<ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
							<li>
								<a href="#">
									<i class="ace-icon fa fa-power-off"></i>
									Logout
								</a>
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</div><!-- /.navbar-container -->
	</div>
	<div class="main-container" id="main-container">
		<script type="text/javascript">
			try { ace.settings.check('main-container', 'fixed') } catch (e) { }
		</script>
		@RenderSection("MenuLateral", required: false)
		<div class="main-content">
			<div class="main-content-inner">
				<div class="page-content">
					<!-- /.ace-settings-container -->
					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							@RenderBody()
							<!-- PAGE CONTENT ENDS -->
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div><!-- /.page-content -->
			</div>
		</div><!-- /.main-content -->
	</div>
	<div class="footer" style="bottom: 0">
		<div class="footer-inner">
			<div class="footer-content">
				<span class="bolder bigger-120" style="color: #522d1c">Villa Bisutti &reg;</span>
				@(DateTime.Now.Year)

				&nbsp; &nbsp;

			</div>
		</div>
	</div><!-- Footer -->
</body>
</html>
