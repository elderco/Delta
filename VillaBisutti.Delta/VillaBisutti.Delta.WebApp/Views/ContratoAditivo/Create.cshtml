@model VillaBisutti.Delta.Core.Model.ContratoAditivo

@{
	Layout = null;	
    //ViewBag.Title = "Create";
}
@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("ItemCreated", "ContratoAditivo"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Contrato Aditivo</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.EvtId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EvtId)
                @Html.ValidationMessageFor(model => model.EvtId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Arquivo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Arquivo)
                @Html.ValidationMessageFor(model => model.Arquivo)
            </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.NumeroContrato, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.NumeroContrato)
				@Html.ValidationMessageFor(model => model.NumeroContrato)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DataContrato, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.DataContrato)
				@Html.ValidationMessageFor(model => model.DataContrato)
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
