@model IEnumerable<VillaBisutti.Delta.Core.Model.Usuario>

@{
	Layout = "~/Views/Shared/_ConfiguracoesLayout.cshtml";
}
@section scripts {
	<script language="javascript" type="text/javascript">
		$(document).ready(function () {
			$(".PopUpActionLinks").click(function (e) {
				e.preventDefault();
				ShowPopUp($(this).attr("href"), $(this).attr("title"), 790);
			});
		});
	</script>
}
@Html.Action("Create", "Usuario")
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@*@Html.DisplayNameFor(model => model)*@
		</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(model => item.Nome)
			</td>
			<td>
				@Html.DisplayFor(model => item.Email)
			</td>
			<td>
				@*TODO: Fazer a lista de perfis para aparecer aqui*@
			</td>
			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "PopUpActionLinks", @title = "Editar" }) |
				@Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "PopUpActionLinks", @title = "Excluir" })
			</td>
		</tr>
	}
</table>

