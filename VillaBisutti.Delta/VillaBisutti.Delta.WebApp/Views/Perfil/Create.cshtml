@model VillaBisutti.Delta.Core.Model.Perfil

@{
    Layout = null;
}

@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("ItemCreated", "Perfil"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Perfil</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Módulos</label>
            <div class="col-md-4">
                <div class="row-fluid form-inline">
                    @foreach (VillaBisutti.Delta.Core.Model.Modulo item in ViewBag.Modulos)
                    {
                        <label class="inline">
                           @*<input type="radio" value="@item.Value" class="pull-left" />*@
                            <input type="hidden" name="Modulos.ModuloId" value="@(item.Id)" />
                        </label>
                        <span class="lbl">@item.Nome</span>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="Salvar" class="btn btn-default form-control" />
            </div>
        </div>
    </div>
}


