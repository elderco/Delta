                @Html.ValidationMessageFor(model => model.Quantidade)
            </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.TipoItemSomIluminacao, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TipoItemSomIluminacaoId", (IEnumerable<SelectListItem>)ViewBag.TipoItemSomIluminacao, String.Empty)
				@Html.ValidationMessageFor(model => model.TipoItemSomIluminacao)
			</div>
			<div class="col-md-2">
				<a href="@(Url.Action("Create", "TipoItemSomIluminacao"))" class="btn btn-default" id="CriarTipoItem"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Criar</a>
				<a href="javascript:void(0);" class="btn btn-default" id="EditarTipoItem"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
