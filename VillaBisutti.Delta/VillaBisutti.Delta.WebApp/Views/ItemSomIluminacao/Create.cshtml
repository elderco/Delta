@model VillaBisutti.Delta.Core.Model.ItemSomIluminacao

@{
	Layout = null;
	ViewBag.Title = "Create";
}
<script type="text/javascript" language="javascript">
	$(document).ready(function () {
		$("#EditarTipoSomIluminacao").attr("disabled", "disabled");
		$("#ExcluirTipoSomIluminacao").attr("disabled", "disabled");
		$("#TipoItemSomIluminacaoId").change(function () {
			var id = $(this).val();
			if (id == "") {
				$("#EditarTipoSomIluminacao").attr("disabled", "disabled");
				$("#ExcluirTipoSomIluminacao").attr("disabled", "disabled");
			} else {
				$("#EditarTipoSomIluminacao").removeAttr("disabled");
				$("#ExcluirTipoSomIluminacao").removeAttr("disabled");
			}
			var urlEditar = "@(Url.Action("Edit", "TipoItemSomIluminacao"))/";
			var urlDeletar = "@(Url.Action("Delete", "TipoItemSomIluminacao"))/";
			$("#EditarTipoItem").click(function () {
				ShowPopUp(urlEditar + id, "Editar tipo de item de som e iluminacao", 790);
			});
			$("#ExcluirTipoItem").click(function () {
				ShowPopUp(urlDeletar + id, "Excluir tipo de item de som e iluminacao", 790);
			});
		});
	});
</script>

@using (Html.BeginForm("ItemCreated", "ItemSomIluminacao"))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>ItemSomIluminacao</h4>
		<hr />
		@Html.ValidationSummary(true)

		<div class="form-group">
			@Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Nome)
				@Html.ValidationMessageFor(model => model.Nome)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Quantidade)
				@Html.ValidationMessageFor(model => model.Quantidade)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.TipoItemSomIluminacaoId, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TipoItemSomIluminacaoId", (IEnumerable<SelectListItem>)ViewBag.TipoItemSomIluminacao, String.Empty)
				@Html.ValidationMessageFor(model => model.TipoItemSomIluminacao)
			</div>
			<div class="col-md-2">
				<a href="@(Url.Action("Create", "TipoItemSomIluminacao"))" class="btn btn-default PopUpActionLinks" id="CriarTipoSomIluminacao"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Criar</a>
				<a href="javascript:void(0);" class="btn btn-default" id="EditarTipoSomIluminacao"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
				<a href="javascript:void(0);" class="btn btn-default" id="ExcluirTipoSomIluminacao"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}