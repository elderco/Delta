@model VillaBisutti.Delta.Core.Model.ItemSomIluminacao

@{
    ViewBag.Title = "Create";
}
<script type="text/javascript" language="javascript">
	$(document).ready(function () {
		$("#EditarTipoItem").attr("disabled", "disabled");
		$("#ExcluirTipoItem").attr("disabled", "disabled");
		$("#TipoItemSomIluminacaoId").change(function () {
			var id = $(this).val();
			if (id == "") {
				$("#EditarTipoItem").attr("disabled", "disabled");
				$("#ExcluirTipoItem").attr("disabled", "disabled");
			} else {
				$("#EditarTipoItem").removeAttr("disabled");
				$("#ExcluirTipoItem").removeAttr("disabled");
			}
			var urlEditar = "@(Url.Action("Edit", "TipoItemSomIluminacao"))/";
			var urlDeletar = "@(Url.Action("Delete", "TipoItemSomIluminacao"))/";
			$("#EditarTipoItem").attr("href", urlEditar + id);
			$("#ExcluirTipoItem").attr("href", urlDeletar + id);
		});
	});
</script>

<h2>Create</h2>


