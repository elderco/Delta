@model VillaBisutti.Delta.Core.Model.TipoReuniao
@{
	Layout = null;
	//ViewBag.Title = "Create";
}
<script language="javascript" type="text/javascript">
	$(document).ready(function () {
		CreateHorarioEditor("HorarioDuracao");
