@model VillaBisutti.Delta.Core.Model.ItemDecoracao

@{
	Layout = null;		
	//ViewBag.Title = "Create";
}
	@Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript" language="javascript">
	$(document).ready(function () {
		$("#EditarTipoItem").attr("disabled", "disabled");
		$("#ExcluirTipoItem").attr("disabled", "disabled");
		$("#TipoItemDecoracaoId").change(function () {
			var id = $(this).val();
			if (id == "") {
				$("#EditarTipoItem").attr("disabled", "disabled");
				$("#ExcluirTipoItem").attr("disabled", "disabled");
			} else {
				$("#EditarTipoItem").removeAttr("disabled");
				$("#ExcluirTipoItem").removeAttr("disabled");
			}
			var urlEditar = "@(Url.Action("Edit", "TipoItemDecoracao"))/";
			var urlDeletar = "@(Url.Action("Delete", "TipoItemDecoracao"))/";
			$("#EditarTipoItem").click(function(){
				ShowPopUp(urlEditar + id, "Editar tipo de item de decoração", 790);
			});
			$("#ExcluirTipoItem").click(function(){
				ShowPopUp(urlDeletar + id, "Excluir tipo de item de decoração", 790);
			});
		});
	});
</script>


@using (Html.BeginForm("ItemCreated", "ItemDecoracao"))
	{
	@Html.AntiForgeryToken()

	<div class="form-horizontal row-fluid">
		<h4>Configuração de itens de Decoração</h4>
		<hr />
		@Html.ValidationSummary(true)

		<div class="form-group col-md-6">
			@Html.LabelFor(model => model.TipoItemDecoracao, new { @class = "control-label col-md-4" })
			<div class="col-md-2">
				@Html.DropDownList("TipoItemDecoracaoId", (IEnumerable<SelectListItem>)ViewBag.TipoItemDecoracao, string.Empty, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.TipoItemDecoracao)
			</div>
			<div class="col-md-6">
				<a href="@(Url.Action("Create", "TipoItemDecoracao"))" class="btn btn-sm btn-default PopUpActionLinks" id="CriarTipoItem"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Criar</a>
				<a href="javascript:void(0);" class="btn btn-sm btn-default" id="EditarTipoItem"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
				<a href="javascript:void(0);" class="btn btn-sm btn-default" id="ExcluirTipoItem"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
			</div>
		</div>

		<div class="form-group col-md-6">
			@Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-4" })
			<div class="col-md-8">
				@Html.EditorFor(model => model.Nome)
				@Html.ValidationMessageFor(model => model.Nome)
			</div>
		</div>

		<div class="form-group col-md-6">
			@Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-4" })
			<div class="col-md-8">
				@Html.EditorFor(model => model.Quantidade)
				@Html.ValidationMessageFor(model => model.Quantidade)
			</div>
		</div>


		<div class="form-group col-md-6">
			<div class="col-md-offset-4 col-md-8">
				<input type="submit" value="Criar" class="btn btn-default form-control" />
			</div>
		</div>
	</div>
}
