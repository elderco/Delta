@model IEnumerable<VillaBisutti.Delta.Core.Model.ItemDecoracao>
@{
	Layout = null;
}
<script language="javascript" type="text/javascript">
	$(document).ready(function () {
		$("body").off("change", "#ItemDecoracaoId");
		$("#ItemDecoracaoId").change(function () {
			if ($("#ItemDecoracaoId option:selected").attr("data-show-hide") != "False") {
				$(".deve-sumir").hide();
			} else {
				$(".deve-sumir").show();
			}
		});
	});
</script>
<select name="ItemDecoracaoId" id="ItemDecoracaoId" class="form-control" data-val="true" data-val-required="Preencha este campo">
	<option value=""></option>
	@foreach (var item in Model)
	{
		<option value="@(item.Id)" data-show-hide="@(item.BloqueiaOutrasPropriedades)">@(item.Nome)</option>
	}
</select>
<span class="field-validation-valid" data-valmsg-for="ItemDecoracaoId" data-valmsg-replace="true"></span>
