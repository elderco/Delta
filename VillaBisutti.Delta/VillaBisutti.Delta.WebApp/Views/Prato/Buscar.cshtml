@model IEnumerable<VillaBisutti.Delta.Core.Model.Prato>
@{
	Layout = null;
}
<script language="javascript" type="text/javascript">
	$(document).ready(function () {
		$(".PopUpActionLinks").click(function (e) {
			e.preventDefault();
			ShowPopUp($(this).attr("href"), $(this).attr("title"), 790);
		});
	});
</script>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.TipoPrato.Nome)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th>
			Opções
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.TipoPrato.Nome)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Nome)
			</td>
			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "PopUpActionLinks" }) |
				@Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "PopUpActionLinks" })
			</td>
		</tr>
	}

</table>