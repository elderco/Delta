@model IEnumerable<VillaBisutti.Delta.Core.Model.FornecedorBoloDoceBemCasado>
@{
	Layout = "~/Views/Shared/_ConfiguracoesLayout.cshtml";
	//ViewBag.Title = "Index";
}
@section scripts {
	<script language="javascript" type="text/javascript">
		$(document).ready(function () {
			$(".PopUpActionLinks").click(function (e) {
				e.preventDefault();
				ShowPopUp($(this).attr("href"), $(this).attr("title"), 790);
			});
		});
	</script>
}
@Html.Action("Create", "FornecedorBoloDoceBemCasado")
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.NomeFornecedor)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.NomeFornecedor)
			</td>
			<td>
				@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "PopUpActionLinks", @title = "Editar" }) |
				@Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "PopUpActionLinks", @title = "Excluir" })
			</td>
		</tr>
	}

</table>
