@model VillaBisutti.Delta.Core.Model.FornecedorBoloDoceBemCasado

@{
	Layout = null;
}

@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("ItemCreated", "FornecedorBoloDoceBemCasado"))
{
	@Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Fornecedor de Bolo, Doce e Bem-Casado</h4>
        <hr />
        @Html.ValidationSummary(true)

		<div class="form-group col-md-6">
			@Html.LabelFor(model => model.NomeFornecedor, new { @class = "control-label col-md-4" })
			<div class="col-md-8">
				@Html.EditorFor(model => model.NomeFornecedor)
				@Html.ValidationMessageFor(model => model.NomeFornecedor)
			</div>
		</div>

		<div class="form-group col-md-6">
			<div class="col-md-offset-4 col-md-8">
				<input type="submit" value="Create" class="btn btn-default form-control" />
			</div>
		</div>
    </div>
}

