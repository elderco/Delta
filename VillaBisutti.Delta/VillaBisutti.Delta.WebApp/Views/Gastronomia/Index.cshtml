@model VillaBisutti.Delta.Core.Model.Gastronomia
@{
	Layout = "~/Views/Shared/_EventosLayout.cshtml";
}
@section scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
<div class="col-xs-12">
	<fieldset class="col-md-8">
		<legend>Informações básicas</legend>
		@Html.Partial("../Gastronomia/Edit", Model)
	</fieldset>
	<fieldset class="col-md-3 pull-right">
		<legend>Ações</legend>
		<a href="@(Model.Evento.TipoServicoId != null && Model.Evento.CardapioId != null ? Url.Action("ImportarDoCardapio", "PratoSelecionado", new { @id = Model.EventoId }) : "javascript:void(0);")" class=" btn btn-default form-control">Importar degustação padrão</a>
		<button class="btn btn-default form-control">Gerar DOCUMENTO DE REUNIÃO DE DEGUSTAÇÃO</button>
	</fieldset>
</div>
<div>
	@foreach (VillaBisutti.Delta.Core.Model.TipoPratoPadrao tipoPrato in Model.TiposPratos)
	{
		<ul class="list-group">
			<li class="list-group-item list-group-item-info">@(tipoPrato.TipoPrato.Nome)</li>
			@foreach (VillaBisutti.Delta.Core.Model.PratoSelecionado prato in Model.Pratos.Where(p => p.Prato.TipoPratoId == tipoPrato.Id))
			{
				<li class="list-group-item">
					<strong>@(prato.Prato.Nome)</strong>
					<span>@(prato.Degustar)</span>
					<span>@(prato.Escolhido)</span>
				</li>
			}
		</ul>
	}
</div>