@model VillaBisutti.Delta.Core.Model.Cardapio
@{
	Layout = null;
}
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        var disabled = $("#Disabled").val().toString();
        if (disabled == "True") {
            $('input', 'form').attr("disabled", "disabled");
            $('select', 'form').attr("disabled", "disabled");
            $('button', 'form').attr("disabled", "disabled");
            $('a', 'form').attr("disabled", "disabled").attr("readonly", "readonly");
        }
        else {
            $('input', 'form').removeAttr("disabled");
            $('button', 'form').removeAttr("disabled");
            $('a', 'form').removeAttr("disabled").removeAttr("readonly");
        }
    });
</script>
	@Scripts.Render("~/bundles/jqueryval")
@using (Html.BeginForm("ItemCreated", "Cardapio"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cardápios</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Nome)
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Salvar" class="btn btn-default form-control" />
            </div>
        </div>
    </div>
}
