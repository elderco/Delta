@model VillaBisutti.Delta.Core.Model.ItemFotoVideoSelecionado
@{
	Layout = null;
}
<script language="javascript" type="text/javascript">
		$(document).ready(function () {
			$("#TipoItemFotoVideoId").change(function () {
				if (!$(this).val())
					$("#ItensFotoVideoContainer").html("<select />");
				else
					LoadPage("@(Url.Action("ListarPorTipo", "ItemFotoVideo"))/?tipoId=" + $(this).val(), "ItensFotoVideoContainer");
			})
		});
</script>
@using (Html.BeginForm("CreateItemFotoVideoSelecionado", "ItemFotoVideoSelecionado"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
		<input type="hidden" name="EventoId" id="EventoId" value="@(ViewBag.Id)" />
			<div class="form-group">
				@Html.LabelFor(model => model.ItemFotoVideo.TipoItemFotoVideo.Nome, new { @class = "control-label col-md-2" })
				<div class="col-md-4">
					@Html.DropDownList("TipoItemFotoVideoId", (IEnumerable<SelectListItem>)ViewBag.TipoItemFotoVideoId, "Selecione", new { @class = "form-control" })
				</div>
				@Html.LabelFor(model => model.ItemFotoVideo.Nome, new { @class = "control-label col-md-2" })
				<div class="col-md-4" id="ItensFotoVideoContainer">
					<select class="form-control"></select>
				</div>
			</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ContratoAditivo, "ContratoAditivoId", new { @class = "control-label col-md-2" })
			<div class="col-md-4">
				@Html.DropDownList("ContratoAditivoId", (IEnumerable<SelectListItem>)ViewBag.ContratoAditivoId, "Selecione", new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.ContratoAditivoId)
			</div>
			<div class="col-md-3">
				@Html.EditorFor(model => model.ContratacaoBisutti)
				@Html.LabelFor(model => model.ContratacaoBisutti, new { @class = "control-label" })
				@Html.ValidationMessageFor(model => model.ContratacaoBisutti)
			</div>
			<div class="col-md-3">
				@Html.EditorFor(model => model.FornecimentoBisutti)
				@Html.LabelFor(model => model.FornecimentoBisutti, new { @class = "control-label" })
				@Html.ValidationMessageFor(model => model.FornecimentoBisutti)
			</div>
		</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-2" })
				<div class="col-md-2">
					@Html.EditorFor(model => model.Quantidade)
					@Html.ValidationMessageFor(model => model.Quantidade)
				</div>
				@Html.LabelFor(model => model.Observacoes, new { @class = "control-label col-md-2" })
				<div class="col-md-6">
					@Html.EditorFor(model => model.Observacoes)
					@Html.ValidationMessageFor(model => model.Observacoes)
				</div>
			</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
				<button type="submit" class="btn btn-default form-control"><span class="menu-icon fa fa-plus"></span> Adicionar</button>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
