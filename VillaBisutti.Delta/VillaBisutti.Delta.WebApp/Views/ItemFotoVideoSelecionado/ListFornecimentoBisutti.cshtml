@model IEnumerable<VillaBisutti.Delta.Core.Model.ItemFotoVideoSelecionado>

@{
	Layout = null;
}

@if (Model.Count() > 0)
{
	<table class="table">
		<tr>
			<th class="col-md-4">
				@Html.DisplayNameFor(model => model.ItemFotoVideo.Nome)
			</th>
			<th class="col-md-2">
				@Html.DisplayNameFor(model => model.Quantidade)
			</th>
			<th class="col-md-4">
				@Html.DisplayNameFor(model => model.Observacoes)
			</th>
			<th class="col-md-1">
				@Html.DisplayNameFor(model => model.Definido)
			</th>
			<th class="col-md-1"></th>
		</tr>
		<tbody>
			@foreach (var item in Model)
			{
				@Html.Action("EditFornecimentoBisutti", "ItemFotoVideoSelecionado", new { id = item.Id })
			}
		</tbody>
	</table>
}
else
{
	<p>Não existem itens adicionados à OS com esse criterio</p>
}