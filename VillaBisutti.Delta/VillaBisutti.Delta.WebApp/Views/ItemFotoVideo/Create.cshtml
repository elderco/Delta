@model VillaBisutti.Delta.Core.Model.ItemFotoVideo

@{
	Layout = null;		
    ViewBag.Title = "Create";
}
<script type="text/javascript" language="javascript">
	$(document).ready(function () {
		$("#EditarTipoFotoVideo").attr("disabled", "disabled");
		$("#ExcluirTipoFotoVideo").attr("disabled", "disabled");
		$("#TipoItemFotoVideoId").change(function () {
			var id = $(this).val();
			if (id == "") {
				$("#EditarTipoFotoVideo").attr("disabled", "disabled");
				$("#ExcluirTipoFotoVideo").attr("disabled", "disabled");
			} else {
				$("#EditarTipoFotoVideo").removeAttr("disabled");
				$("#ExcluirTipoFotoVideo").removeAttr("disabled");
			}
			var urlEditar = "@(Url.Action("Edit", "TipoItemFotoVideo"))/";
			var urlDeletar = "@(Url.Action("Delete", "TipoItemFotoVideo"))/";
			$("#EditarTipoItem").click(function () {
				ShowPopUp(urlEditar + id, "Editar tipo de item de foto e video", 790);
			});
			$("#ExcluirTipoItem").click(function () {
				ShowPopUp(urlDeletar + id, "Excluir tipo de item de foto e video", 790);
			});
		});
	});
</script>

@using (Html.BeginForm("ItemCreated", "ItemFotoVideo"))
	{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ItemFotoVideo</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade)
                @Html.ValidationMessageFor(model => model.Quantidade)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoItemFotoVideoId, "TipoItemFotoVideoId", new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("TipoItemFotoVideoId", (IEnumerable<SelectListItem>)ViewBag.TipoItemFotoVideo, String.Empty)
				@Html.ValidationMessageFor(model => model.TipoItemFotoVideo)
			</div>
			<div class="col-md-2">
				<a href="@(Url.Action("Create", "TipoItemFotoVideo"))" class="btn btn-default PopUpActionLinks" id="CriarTipoFotoVideo"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Criar</a>
				<a href="javascript:void(0);" class="btn btn-default" id="EditarTipoFotoVideo"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
				<a href="javascript:void(0);" class="btn btn-default" id="ExcluirTipoFotoVideo"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir</a>
			</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
